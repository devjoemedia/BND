import FormHandler from 'markojs-form'
import axios from 'axios'

static const options = {
    key: 'create-temp',
    autosave: true,
    crosscheck: true
}

class {
  onCreate(input){
    const initialForm = { name: 'gremdol', description: 'my@email.com', refURL:"refURL", text: 'my@email.com', html: "html"}

    this.fhandler = new FormHandler( options )

    this.fhandler.bind(this, initialForm)
  }

  handleSubmit() {
    console.log(this.state.form)
    axios({
      method: 'post',
      url:'/create-checkout-session',
      headers: { 
      'Content-Type': 'application/json',
      'Access-Control-Allow-Origin': '*'  
    },
      data: {
        price: this.state.total
      } 
    })
    .then(({ data }) => {
      window.location = data.url
    })
    .catch(err => console.log(err.message))
  }
}

<Dashboard navigate=input.navigate>
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center  mb-3 border-bottom">
    <h3>Create Template</h3>
  </div>

  <section>
    <div class="row">
      <div class="col-12">
        <form class="form-validate">
          <div class="row">
            <div class="col-12 col-sm-6">
              <div class="form-group">
                <div class="controls">
                  <label>Name</label>
                  <input
                    type="text"
                      class="form-control"
                      placeholder="name"
                      name="name"
                      value=state.form.name
                      on-change("__onChange")
                  />
                </div>
              </div>
              <div class="form-group">
                <div class="controls">
                  <label>Description</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="description"
                    name="description"
                    value=state.form.description
                    on-change("__onChange")
                  />
                </div>
              </div>
              <div class="form-group">
                <div class="controls">
                  <label>Text</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="text"
                    name="text"
                    value=state.form.text
                    on-change("__onChange")
                  />
                </div>
              </div>
              <div class="form-group">
                <div class="controls">
                  <label>refURL</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="refURL"
                    name="refURL"
                    value=state.form.refURL
                    on-change("__onChange")
                  />
                </div>
              </div>
              <div class="form-group">
                <div class="controls">
                  <label>HTML</label>
                  
                  <textarea class="form-control" placeholder="html structure of your email template" rows="15" name="html" on-change("__onChange") >${state.form.html}</textarea>
                </div>
              </div>
            </div>
          </div>
        </form>
        <div class="mt-1">
          <button type="submit" class="btn btn-primary" on-click("handleSubmit") >
            Save
          </button>
          <button type="reset" class="btn btn-light ml-1" on-click(()=> input.navigate('/templates'))>Cancel</button>
        </div>
      </div>
    </div>
  </section>
</Dashboard>